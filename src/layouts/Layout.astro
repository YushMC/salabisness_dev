---
const { title } = Astro.props;

import Header from "../components/global/Header.astro";

import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title}</title>
		<link rel="stylesheet" href="/src/styles/global.css">
		<link rel="stylesheet" href="/src/styles/normalize.css">
	</head>
	<body>
		<main>
			<Header></Header>
			<slot></slot>
		</main>
	</body>
</html>

<style is:global lang="scss">
	@use "/src/styles/sass/index.scss" as *;


	body{
		
		background: linear-gradient(23deg, $secondary-color 21%, $primary-color 100%);
		background-repeat: no-repeat;
		background-size: cover;
		background-attachment: fixed;
		
	}
	main{
		min-height: 100dvh;
		position: relative;
		display: flex;
		flex-direction: column;
		backdrop-filter: blur(100px);
		background: rgba(0, 0, 0, 0.692);
		overflow: hidden;
	}

	button{
		background: $color-background-main;
	}

	hr.divisor{

		&::after{
			content: "";
			width: 80%;
			height: 100%;
			background: linear-gradient(40deg, transparent 20%, $secondary-color 70%, $primary-color 100%);
			position: absolute;
			top: 120%;
			left: 10%;
			opacity: 0.6;
			border-radius: $border-radius;
			transition: all 0.3s linear;
			animation: showBarsHr 0.5s ease-out forwards;
		}

		&::before{
			content: "";
			width: 70%;
			height: 100%;
			background: linear-gradient(40deg, transparent 20%, $secondary-color 70%, $primary-color 100%);
			position: absolute;
			top: 250%;
			left: 10%;
			opacity: 0.3;
			border-radius: $border-radius;
			transition: all 0.3s linear;
			animation: showBarsHr 0.3s ease-in forwards;
		}
	}
	hr{
		margin: 5% auto;
		width: 80%;
		height: 0.5rem;
		background: linear-gradient(40deg, transparent 20%, $secondary-color 70%, $primary-color 100%);
		background-size: 100%;
		background-repeat: no-repeat;
		border: none;
		border-radius: $border-radius;
		opacity: 1;
		position: relative;
		transition: all 0.3s linear;
		animation: showBarsHr 1s ease-in-out forwards;
	}
	

	@keyframes respirationDropShadow {
        0%{
            filter: drop-shadow(5px 5px 50px $secondary_color);
        }
        50%{
            filter: drop-shadow(5px 5px 10px $primary_color);
        }
        80%{
            filter: drop-shadow(5px 5px 50px $secondary_color);
        }
        100%{
            filter: drop-shadow(5px 5px 50px $secondary_color);
        
        }
    }
	

	@keyframes respirationBoxShadow {
        0%{
            box-shadow: 0px 0px 5px 5px $secondary_color;
        }
        50%{
            box-shadow: 0px 0px 5px 5px $primary_color;
        }
        80%{
            box-shadow: 0px 0px 5px 5px $secondary_color;
        }
        100%{
            box-shadow: 0px 0px 5px 5px $secondary_color;
        }
    }
</style>
